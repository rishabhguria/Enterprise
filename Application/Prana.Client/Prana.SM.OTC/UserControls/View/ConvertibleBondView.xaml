<UserControl x:Class="Prana.SM.OTC.View.ConvertibleBondView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:ig="http://schemas.infragistics.com/xaml"
            
                xmlns:Behaviours="clr-namespace:Prana.SM.OTC.Behaviours" 
                xmlns:Custom="http://infragistics.com/Editors"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:Core="clr-namespace:System;assembly=mscorlib" 
                xmlns:themes="http://infragistics.com/Themes" 
                
                mc:Ignorable="d" 
                xmlns:igWPF="http://schemas.infragistics.com/xaml/wpf"
                xmlns:sys="clr-namespace:System;assembly=mscorlib" 
                xmlns:viewModels="clr-namespace:Prana.SM.OTC"
                d:DesignHeight="350" d:DesignWidth="660" Width="650" Height="450"
                DataContext="{DynamicResource MainWindowViewModelRes}">
    <UserControl.Resources>
        <ResourceDictionary>
            <viewModels:ConvertibleBondViewModel x:Key="MainWindowViewModelRes"/>
            <ObjectDataProvider x:Key="FrequencyTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="viewModels:PeriodFrequency"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="RateTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="viewModels:RateType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="CommisionTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="viewModels:CommisionType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="DayCounts" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="viewModels:DayCount"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <Style x:Key="NumericEditorStyle" TargetType="{x:Type Custom:XamNumericEditor}">
                <Setter Property="SpinButtonDisplayMode" Value="Always"/>
                <Setter Property="PromptChar" Value=""/>
                <Setter Property="Margin" Value="5,5,5,5"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  Background="#FFE7E8E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox BorderBrush="Black" Grid.Row="0" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Equity Leg</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Conversion Ratio"   Padding="0,10,10,5" Grid.Row="0" Width="110" Grid.Column="1"/>
                            <Label Content="First Price"  Visibility="{Binding IsTradeView}"  Grid.Row="0" Grid.Column="0" Padding="0,10,10,5" Width="110"/>
                            <Label Content="First Reset Date"  Visibility="{Binding IsTradeView}"  Grid.Row="0" Grid.Column="2" Padding="0,10,10,5" Width="110"/>

                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="1" Margin="10,0,10,10" Width="110" ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.EquityLeg_ConversionRatio,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>

                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="0" Margin="10,0,10,10" Width="110"    Visibility="{Binding IsTradeView}"  ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.EquityLeg_ConversionPrice,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>

                            <igWPF:XamDateTimeEditor   Visibility="{Binding IsTradeView}"   Margin="10,0,10,10" Grid.Row="1" Grid.Column="2" Width="110" Validation.ErrorTemplate="{x:Null}" AutoFillDate="MonthAndYear" Text="{Binding Path=ConvertibleBondView.EquityLeg_ConversionDate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox  BorderBrush="Black" Grid.Row="1" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Finance Leg</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <WrapPanel Grid.Row="0" Grid.Column="0"  Width="110">
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding Path=ConvertibleBondView.FinanceLeg_ZeroCoupon}"/>
                                <Label Content="Zero Coupon" Margin="5,5,5,5"/>
                            </WrapPanel>
                            <Label Content="Intrest Rate Bench."  Grid.Row="0" Grid.Column="1" Padding="0,10,10,5" Width="110"  Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content="Fixed Rate %" Grid.Row="0" Grid.Column="2" Padding="0,10,10,5"  Width="105" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content="Spread (B.P.)" Grid.Row="0" Grid.Column="3" Padding="0,10,10,5"  Width="105" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content="Coupon Freq." Grid.Row="0" Grid.Column="4" Padding="0,10,10,5" Width="110" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                            <Label Content="Day Count" Grid.Row="2" Grid.Column="0" Padding="0,10,10,5" Width="110"/>


                            <ig:XamComboEditor x:Name="ComboFrequencyEquityleg"  Margin="10,0,10,10" EmptyText="Select" Grid.Row="1" Grid.Column="1" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                               MaxDropDownHeight="60" MaxDropDownWidth="50"   Width="110"  VerticalAlignment="Center" IsEditable="False" 
                                ItemsSource="{Binding Source={StaticResource FrequencyTypes}}" SelectedItem="{Binding Path=ConvertibleBondView.FinanceLeg_IRBenchMark}">
                            </ig:XamComboEditor>


                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="2" Margin="10,0,10,10" Width="105" ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.FinanceLeg_FXRate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  >
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="3" Margin="10,0,10,10" Width="105" ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.FinanceLeg_SBPoint,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  >
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <ig:XamComboEditor x:Name="ComboFrequencyFinanceLeg" ItemsSource="{Binding Source={StaticResource FrequencyTypes}}" SelectedItem="{Binding Path=ConvertibleBondView.FinanceLeg_CouponFreq}" Margin="10,0,10,10"  EmptyText="Select" Grid.Row="1" Grid.Column="4"    Width="100"  VerticalAlignment="Center" IsEditable="False" Visibility="{Binding Path=ConvertibleBondView.IsFinanceLeg_ZeroCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  />
                            <ig:XamComboEditor x:Name="ComboDayCountFinanceLeg" ItemsSource="{Binding Source={StaticResource DayCounts}}" SelectedItem="{Binding Path=ConvertibleBondView.FinanceLeg_DayCount}" Margin="10,0,10,10"  EmptyText="Select" Grid.Row="3" Grid.Column="0"    Width="110"   VerticalAlignment="Center" IsEditable="False" />

                            <Label Content="First Payment Date"   Visibility="{Binding Path=ConvertibleBondView.IsFieldVisibleBasedOnCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="2" Grid.Column="1" Padding="0,10,10,5" Width="110"/>
                            <Label Content="First Reset Date"    Visibility="{Binding Path=ConvertibleBondView.IsFieldVisibleBasedOnCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Grid.Row="2" Grid.Column="2" Padding="0,10,10,5" Width="105"/>
                            <igWPF:XamDateTimeEditor     Visibility="{Binding Path=ConvertibleBondView.IsFieldVisibleBasedOnCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"    Margin="10,0,10,10" Grid.Row="3" Grid.Column="1" Width="110" Validation.ErrorTemplate="{x:Null}" AutoFillDate="MonthAndYear" Text="{Binding Path=ConvertibleBondView.FinanceLeg_FirstPaymentDate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <igWPF:XamDateTimeEditor    Visibility="{Binding Path=ConvertibleBondView.IsFieldVisibleBasedOnCoupon,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"   Margin="10,0,10,10" Grid.Row="3" Grid.Column="2" Width="105" Validation.ErrorTemplate="{x:Null}" AutoFillDate="MonthAndYear" Text="{Binding Path=ConvertibleBondView.FinanceLeg_FirstResetDate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                            <Label Content="Par Value"  Visibility="{Binding IsTradeView}"  Grid.Row="2" Grid.Column="3" Padding="0,10,10,5" Width="105"/>
                            <TextBox Grid.Row="3" Grid.Column="3"  Margin="10,0,10,10"  Visibility="{Binding IsTradeView}" Text="{Binding Path=ConvertibleBondView.FinanceLeg_ParValue}"  Width="105"  />

                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox BorderBrush="Black" Grid.Row="2" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Other Information</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Commission Basis" Grid.Row="0" Grid.Column="0" Padding="0,10,10,5"  Width="130"/>
                            <Label Content="Hard Comm. Rate" Grid.Row="0" Grid.Column="1" Padding="0,10,10,5" Width="130"/>
                            <Label Content="Soft Comm. Rate" Grid.Row="0" Grid.Column="2" Padding="0,10,10,5"  Width="130"/>

                            <ig:XamComboEditor x:Name="ComboCommissionBase" ItemsSource="{Binding Source={StaticResource CommisionTypes}}" SelectedItem="{Binding Path=ConvertibleBondView.Commission_Basis}" Margin="10,0,10,10"  EmptyText="Select" Grid.Row="1" Grid.Column="0"    Width="130"  VerticalAlignment="Center" IsEditable="False" />
                            <Custom:XamNumericEditor   Grid.Row="1" Grid.Column="1" Margin="10,0,10,10"  Width="130"   ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.Commission_HardCommRate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="2" Margin="10,0,10,10" Width="130"  ValueType="Core:Double" Value="{Binding Path=ConvertibleBondView.Commission_SoftCommRate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
