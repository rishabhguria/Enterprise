            <viewModels:CurrentSymbolStateControlViewModel x:Key="CurrentSymbolStateControlViewModel"/>
            <Style x:Key="FillerColHeader" TargetType="{x:Type igPrim:HeaderCellControl}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
            <Style x:Key="FillerColCellStyle"   TargetType="ig:CellControl">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Symbol: " Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Grid.Column="1" Margin="5,5,5,5" Text="{Binding Path=Symbols, Mode=TwoWay}"/>
        </Grid>-->
        <Button Name="btnGetState" Content="Get State" Grid.Row="0" Width="75" Margin="5,5,5,5" HorizontalAlignment="Left" Template="{DynamicResource ButtonControlTemplate}" Foreground="{DynamicResource ButtonForeground}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding Path=GetStateCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
        <Label Content="*Gets state of unique symbols belonging to selected groups" Grid.Row="1" Margin="5,0,5,5"/>
        <Label Content="Existing positions:" Grid.Row="2"/>
        <ig:XamGrid Grid.Row="3" ColumnWidth="SizeToHeader"  ItemsSource="{Binding Path=CurrentSymbolStateCollection, Mode=TwoWay}" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ig:XamGrid.FillerColumnSettings>
                <ig:FillerColumnSettings   Style="{StaticResource FillerColCellStyle}" HeaderStyle="{StaticResource FillerColHeader}" />
            </ig:XamGrid.FillerColumnSettings>
            <ig:XamGrid.FilteringSettings>
                <ig:FilteringSettings AllowFiltering="FilterMenu"></ig:FilteringSettings>
            </ig:XamGrid.FilteringSettings>
            <ig:XamGrid.SelectionSettings>
                <ig:SelectionSettings CellClickAction="SelectRow" CellSelection="None" ColumnSelection="Single" RowSelection="Multiple" />
            </ig:XamGrid.SelectionSettings>
            <ig:XamGrid.Columns>
                <ig:TextColumn Key="AccountId" MinimumWidth="100" Visibility="Collapsed"></ig:TextColumn>
                <ig:TextColumn Key="Symbol" MinimumWidth="100" IsFixed="Left"></ig:TextColumn>
                <ig:TextColumn Key="AccountName" MinimumWidth="100"></ig:TextColumn>
                <ig:TextColumn Key="Quantity" MinimumWidth="100" HorizontalContentAlignment="Right"></ig:TextColumn>
                <ig:TextColumn Key="Notional" MinimumWidth="100" HorizontalContentAlignment="Right"></ig:TextColumn>
            </ig:XamGrid.Columns>
        </ig:XamGrid>
        <GridSplitter Grid.Row="4" />
        <Label Content="Symbols Having No Existing Positions:" Grid.Row="5"/>
        <ig:XamGrid Grid.Row="6" ColumnWidth="*"  ItemsSource="{Binding Path=SymbolWithNoStateCollection, Mode=TwoWay}">
            <ig:XamGrid.FillerColumnSettings>
                <ig:FillerColumnSettings   Style="{StaticResource FillerColCellStyle}" HeaderStyle="{StaticResource FillerColHeader}" />
            </ig:XamGrid.FillerColumnSettings>
            <ig:XamGrid.FilteringSettings>
                <ig:FilteringSettings AllowFiltering="FilterMenu"></ig:FilteringSettings>
            </ig:XamGrid.FilteringSettings>
            <ig:XamGrid.SelectionSettings>
                <ig:SelectionSettings CellClickAction="SelectRow" CellSelection="None" ColumnSelection="Single" RowSelection="Multiple" />
            </ig:XamGrid.SelectionSettings>
            <ig:XamGrid.Columns>
                <ig:TextColumn Key="AccountId" Visibility="Collapsed" MinimumWidth="100"></ig:TextColumn>
                <ig:TextColumn Key="Symbol" IsFixed="Left" MinimumWidth="100"></ig:TextColumn>
                <ig:TextColumn Key="AccountName" Visibility="Collapsed" MinimumWidth="100"></ig:TextColumn>
                <ig:TextColumn Key="Quantity" Visibility="Collapsed" MinimumWidth="100"></ig:TextColumn>
                <ig:TextColumn Key="Notional" Visibility="Collapsed" MinimumWidth="100"></ig:TextColumn>
            </ig:XamGrid.Columns>
        </ig:XamGrid>
    </Grid>
</UserControl>
