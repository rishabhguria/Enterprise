<UserControl x:Class="Prana.CustomChromeLibrary.CaptionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:ccl="clr-namespace:Prana.CustomChromeLibrary"
             mc:Ignorable="d" 
             >
    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="{Binding Path=CaptionButtonMargin}" Background="#FF212C39">
		<ccl:MinimizeButton Margin="2, 0, 0,0"/>
        <ccl:MaximizeButton Margin="2"/>
        <ccl:CloseButton Margin="0,0,5,0"/>
    </StackPanel>
</UserControl>
