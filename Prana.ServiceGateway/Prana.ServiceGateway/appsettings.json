  //Serilog Configuration for File Logging
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      //{
      //  "Name": "Seq",
      //  "Args": {
      //    "serverUrl": "http://localhost:5341/",
      //    "apiKey": "1kX4mfPVzImLaCivk3AK"
      //  }
      //},
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:dd MMM HH:mm:ss} {Level:u3}] {Message:lj} ,[UserId:{UserId}, CorrelationId:{CorrelationId} App:{ApplicationName}]{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": { "expression": "LogType='Nirvana_Web_App'" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs\\ServiceGateway_.log",
                  "rollingInterval": "Day",
                  "fileSizeLimitBytes": 5242880,
                  "rollOnFileSizeLimit": true,
                  "outputTemplate": "[{Timestamp:dd MMM HH:mm:ss} {Level:u3}] {Message:lj} ,[UserId:{UserId}, CorrelationId:{CorrelationId}  Source:{SourceContext}]{NewLine} {Exception}{NewLine}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": { "expression": "LogType='Nirvana_Web_App' and @Level<>'Error'" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs\\Nirvana_Web_App.log",
                  "rollingInterval": "Day",
                  "fileSizeLimitBytes": 5242880,
                  "rollOnFileSizeLimit": true,
                  "outputTemplate": "[{Timestamp:dd MMM HH:mm:ss} {Level:u3}] {Message:lj} ,[UserId:{UserId}, CorrelationId:{CorrelationId}  Source:{SourceContext}]{NewLine} {Exception}{NewLine}"
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": { "expression": "LogType='Nirvana_Web_App' and @Level='Error'" }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs\\Nirvana_Web_App_Error_.log",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true,
                  "fileSizeLimitBytes": 5242880,
                  "outputTemplate": "[{Timestamp:dd MMM HH:mm:ss} {Level:u3}] {Message:lj} ,[UserId:{UserId}, CorrelationId:{CorrelationId}  Source:{SourceContext}]{NewLine} {Exception}{NewLine}"
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId",
      "WithThreadName",
      "WithRequestId"
