<UserControl xmlns:ig="http://schemas.infragistics.com/xaml"  x:Class="Prana.Allocation.Client.Controls.Preferences.Views.AttributeRenamingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewModels="clr-namespace:Prana.Allocation.Client.Controls.Preferences.ViewModels"
	         xmlns:igPrim="http://schemas.infragistics.com/xaml/primitives"
             xmlns:themes="http://infragistics.com/Themes"
             mc:Ignorable="d" 
             DataContext="{DynamicResource AttributeRenamingControlViewModel}" Background="{DynamicResource UserControlBackGround}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Prana.Allocation.Client;component/NirvanaSkin.xaml"/>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamComboEditor.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamDockManager.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamEditors.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamGrid.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamMenu.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>
                <themes:ResourceWasher WashMode="HueSaturationReplacement" WashColor="#FF6D6D6D">
                    <themes:ResourceWasher.SourceDictionary>
                        <ResourceDictionary Source="/Prana.Allocation.Client;component/Themes/IG/IG.xamMultiColumnCombo.xaml" />
                    </themes:ResourceWasher.SourceDictionary>
                </themes:ResourceWasher>

            </ResourceDictionary.MergedDictionaries>

            <viewModels:AttributeRenamingControlViewModel x:Key="AttributeRenamingControlViewModel"/>
            <Style x:Key="FillerColHeader" TargetType="{x:Type igPrim:HeaderCellControl}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
            <Style x:Key="FillerColCellStyle"   TargetType="ig:CellControl">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <GroupBox Name="gboxAttributeRenaming" Header="Attributes" Margin="5,5,5,5" HorizontalAlignment="Center" BorderBrush="{DynamicResource GroupBoxBorder}">
            <ig:XamGrid Name="attributeRenamingGrid" ItemsSource="{Binding Path=AttributeRenamingCollection, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="{DynamicResource XamDataGridBackground}">
                <ig:XamGrid.EditingSettings>
                    <ig:EditingSettings AllowEditing="Cell" IsMouseActionEditingEnabled="SingleClick" IsOnCellActiveEditingEnabled="False" />
                </ig:XamGrid.EditingSettings>
                <ig:XamGrid.ColumnMovingSettings>
                    <ig:ColumnMovingSettings AllowColumnMoving="Disabled"/>
                </ig:XamGrid.ColumnMovingSettings>
                <ig:XamGrid.Columns>
                    <ig:TextColumn Key="AttributeValue" IsReadOnly="True"/>
                </ig:XamGrid.Columns>
                <ig:XamGrid.FillerColumnSettings>
                    <ig:FillerColumnSettings   Style="{StaticResource FillerColCellStyle}" HeaderStyle="{StaticResource FillerColHeader}" />
                </ig:XamGrid.FillerColumnSettings>
            </ig:XamGrid>
        </GroupBox>
    </Grid>
</UserControl>
