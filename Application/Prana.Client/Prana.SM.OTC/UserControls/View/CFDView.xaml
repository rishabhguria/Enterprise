<UserControl x:Class="Prana.SM.OTC.View.CFDView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:ig="http://schemas.infragistics.com/xaml"
                xmlns:igWPF="http://schemas.infragistics.com/xaml/wpf"
                xmlns:sys="clr-namespace:System;assembly=mscorlib" 
                xmlns:viewModels="clr-namespace:Prana.SM.OTC"
                xmlns:Behaviours="clr-namespace:Prana.SM.OTC.Behaviours" 
                xmlns:Custom="http://infragistics.com/Editors"
                xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                xmlns:Core="clr-namespace:System;assembly=mscorlib" 
                mc:Ignorable="d" 
                d:DesignHeight="350" d:DesignWidth="660" Width="650" Height="400"
                DataContext="{DynamicResource MainWindowViewModelRes}">


    <UserControl.Resources>
        <viewModels:CFDViewModel x:Key="MainWindowViewModelRes"/>
        <ObjectDataProvider x:Key="DayCounts" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:DayCount"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="FinanceDayCounts" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:DayCount"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="RateTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:RateType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="CommisionTypes" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:CommisionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style x:Key="NumericEditorStyle" TargetType="{x:Type Custom:XamNumericEditor}">
            <Setter Property="SpinButtonDisplayMode" Value="Always"/>
            <Setter Property="PromptChar" Value=""/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
    </UserControl.Resources>


    <Grid  Background="#FFE7E8E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox BorderBrush="Black" Grid.Row="0" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Collateral</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Margin / Collateral"  VerticalAlignment="Bottom"  Padding="0,10,10,5"   Grid.Row="0" Grid.Column="0"  Width="120"/>
                            <Label Content="Rate %"   Padding="0,10,10,5"   Grid.Row="0" Grid.Column="1"  Width="120"/>
                            <Label Content="Day Count"    Padding="0,10,10,5"   Grid.Row="0" Grid.Column="2"  Width="120"/>

                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="0" Margin="10,0,10,10" Width="120"  ValueType="Core:Double" Value="{Binding Path=CFDData.Collateral_Margin,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="1" Margin="10,0,10,10" Width="120" ValueType="Core:Double" Value="{Binding Path=CFDData.Collateral_Rate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <ig:XamComboEditor x:Name="ComboDayCountCollateral" Margin="10,0,10,10" ItemsSource="{Binding Source={StaticResource DayCounts}}" SelectedItem="{Binding Path=CFDData.Collateral_DayCount}"  EmptyText="Select" Grid.Row="1" Grid.Column="2"   Width="120"  VerticalAlignment="Center" IsEditable="False" />
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox  BorderBrush="Black" Grid.Row="1" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Finance</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Intrest Rate Benchmark" Grid.Row="0" Grid.Column="0"  Padding="0,10,10,5"   Width="155"/>
                            <Label Content="Fixed Rate %"  Grid.Row="0" Grid.Column="1" Padding="0,10,10,5"  Width="120"/>
                            <Label Content="Spread (B.P.)"  Grid.Row="0" Grid.Column="2"  Padding="0,10,10,5"  Width="120"/>
                            <Label Content="Day count" Grid.Row="0" Grid.Column="3"  Padding="0,10,10,5"  Width="120"/>
                            <Label Content="Script lending Fee"  Grid.Row="2" Grid.Column="0"  Padding="0,10,10,5"  Width="155"/>

                            <ig:XamComboEditor x:Name="ComboIntrestRatebenchmarkFinance" Margin="10,0,10,10" ItemsSource="{Binding Source={StaticResource RateTypes}}" SelectedItem="{Binding Path=CFDData.Finance_InteresrRatebenchmark}"   EmptyText="Select" Grid.Row="1" Grid.Column="0"   Width="155"   VerticalAlignment="Center" IsEditable="False" />
                            <Custom:XamNumericEditor   Grid.Row="1" Grid.Column="1" Margin="10,0,10,10"  Width="120"   ValueType="Core:Double" Value="{Binding Path=CFDData.Finance_Fixedrate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="2" Margin="10,0,10,10"  Width="120"  ValueType="Core:Double" Value="{Binding Path=CFDData.Finance_SpreadBP,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>

                            <ig:XamComboEditor x:Name="ComboDayCountFinance" Margin="10,0,10,10"  EmptyText="Select" Grid.Row="1" Grid.Column="3" ItemsSource="{Binding Source={StaticResource FinanceDayCounts}}" SelectedItem="{Binding Path=CFDData.Finance_DayCount}" Width="120"   VerticalAlignment="Center" IsEditable="False" />

                            <Custom:XamNumericEditor Grid.Row="3" Grid.Column="0" Margin="10,0,10,10"  Width="155"  ValueType="Core:Double" Value="{Binding Path=CFDData.Finance_ScriptlendingFee,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <!--<TextBox  Grid.Row="3" Grid.Column="0" Margin="10,0,10,10"  Text="{Binding Path=CFDData.Finance_ScriptlendingFee}"  Width="155"/>-->
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox BorderBrush="Black" Grid.Row="2" Grid.Column="0" BorderThickness="2" Width="640" HorizontalAlignment="Left" Margin="0,0,0,0">
                    <GroupBox.Header>
                        <Span FontWeight="Bold" FontSize="14">Commission</Span>
                    </GroupBox.Header>
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Commission Base" Grid.Row="0" Grid.Column="0"  Padding="0,10,10,5"  Width="130" />
                            <Label Content="Hard Comm. Rate" Grid.Row="0" Grid.Column="1"  Padding="0,10,10,5" Width="130"/>
                            <Label Content="Soft Comm. Rate" Grid.Row="0" Grid.Column="2"  Padding="0,10,10,5"  Width="130"/>
                            <ig:XamComboEditor x:Name="ComboCommissionBaseFinance" Margin="10,0,10,10" ItemsSource="{Binding Source={StaticResource CommisionTypes}}" SelectedItem="{Binding Path=CFDData.CFD_Commissionbasis}"  EmptyText="Select" Grid.Row="1" Grid.Column="0"  Width="130"  VerticalAlignment="Center" IsEditable="False" />
                            <Custom:XamNumericEditor   Grid.Row="1" Grid.Column="1" Margin="10,0,10,10"  Width="130"   ValueType="Core:Double" Value="{Binding Path=CFDData.CFD_HardCommRate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                            <Custom:XamNumericEditor Grid.Row="1" Grid.Column="2" Margin="10,0,10,10" Width="130"  ValueType="Core:Double" Value="{Binding Path=CFDData.CFD_SoftCommRate,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource NumericEditorStyle}" SpinIncrement="1.00000">
                                <i:Interaction.Behaviors>
                                    <Behaviours:XamNumericEditorBehaviour/>
                                </i:Interaction.Behaviors>
                            </Custom:XamNumericEditor>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

