<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://infragistics.com/Editors" x:Class="Prana.Installer.CustomizeControl"
        Title="Client Specific Scripts" Height="110" Width="500"
        Loaded="Window_Loaded" Background="Transparent" WindowStyle="None" AllowsTransparency="True" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="Resources/DefaultAbout.png" Focusable="False">
    <Border CornerRadius="15" Background="#212c39" BorderThickness="5" BorderBrush="DimGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Label Content="Client Name (For Client Specific Scripts)" Grid.Row="0" Foreground="White"></Label>
            <ComboBox Margin="5" Grid.Row="1" x:Name="clientList" Height="25"/>
            <Button Grid.Row="2" Margin="5" Content="Execute" HorizontalAlignment="Right" Width="87" Height="25" Click="Ok_click" IsDefault="true" RenderTransformOrigin="0.011,0.52"/>
        </Grid>
    </Border>
</Window>